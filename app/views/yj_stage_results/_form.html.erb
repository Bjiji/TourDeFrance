<%= form_for(yj_stage_result) do |f| %>
  <% if yj_stage_result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(yj_stage_result.errors.count, "error") %> prohibited this yj_stage_result from being saved:</h2>

      <ul>
      <% yj_stage_result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<div class="field">
  <%= f.label :race_runner %><br />
  <% c_array = RaceRunner.where(:year => @yj_stage_result.stage.year).order('lastname').all.map { |c| [c.display_fullname, c.id] } %>
  <%= f.select :race_runner_id, c_array, {:include_blank => true} %>
</div>

<div class="field">
  <%= f.label :time_sec %><br />
  <%= f.text_field :time_sec %>
</div>
<div class="field">
  <%= f.label :diff_time_sec %><br />
  <%= f.text_field :diff_time_sec %>
</div>

<div class="field">
  <%= f.label :pos %><br />
  <%= f.number_field :pos %>
</div>

<div class="actions">
  <%= f.submit %>
</div>