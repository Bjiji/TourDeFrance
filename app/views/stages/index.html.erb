<script>
    $(document).ready(function() {
        $('#stages').dataTable( {
            "sPaginationType": "full_numbers",
            "iDisplayLength": 50
        });
    } );
</script>
<h1>Listing stages</h1>

<table class="display" id="stages">
  <thead>
  <tr>
    <th>Année</th>
    <th>Etape</th>
    <th>Date</th>
    <th>Départ</th>
    <th>Arrivée</th>
    <th>Distance</th>
    <th>Type</th>
    <th>Coureurs</th>
  </tr>
</thead>
<tbody>
<% @stages.each do |stage| %>
  <tr>
    <td><%= link_to stage.year, stage.race %></td>
    <td><%= link_to stage.stage_num, stage %></td>
    <td><%= link_to stage.date, stage %></td>
    <td><%= stage.start %></td>
    <td><%= stage.finish %></td>
    <td><%= stage.distance %></td>
    <td><%= stage.stage_type %></td>
    <td><%= stage.runners_cnt.to_s + ' (' + stage.finishers_cnt.to_s + ')'%></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Stage', new_stage_path %>
