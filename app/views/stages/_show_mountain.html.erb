<table>
<%  @mountains.each do |mountain| %>
      <tr>
        <td><%= link_to mountain.order, mountain_stage_result_path(mountain) %></td>
        <td><%= mountain.altitude %>m</td>
        <td><%= link_to(mountain.name, mountain_stage_result_path(mountain)) %></td>
        <td>(cat. <%= mountain.category_s %>)</td>
        <td><%= if (mountain.race_runner != nil) then link_to(mountain.race_runner.display_name, race_runner_path(mountain.race_runner)) else "?" end %></td>
      </tr>
  <% end  %>
</table>