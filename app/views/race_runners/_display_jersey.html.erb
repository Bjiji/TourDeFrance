<%
  race = nil if local_assigns[:race].nil?
  stage = nil if local_assigns[:stage].nil?
%>
<table><tr>
  <% if (race != nil && race.ig_race_result != nil && race.ig_race_result.leader == race_runner) then %>
    <td><img src="/assets/maillot_jaune_20.png"/></td>
<% end %>
<% if (race != nil && race.ig_race_result != nil && race.ig_race_result.sprinter == race_runner) then %>
    <td><img src="/assets/maillot_vert_20.png"/></td>
<% end %>
  <% if (race != nil && race.ig_race_result != nil && race.ig_race_result.climber == race_runner) then %>
    <td><img src="/assets/maillot_pois_20.png"/></td>
<% end %>
  <% if (race != nil && race.ig_race_result != nil && race.ig_race_result.young == race_runner) then %>
    <td><img src="/assets/maillot_blanc_20.png"/></td>
<% end %>
  <% if (stage != nil && stage.ig_stage_result != nil && stage.ig_stage_result.previous_leader == race_runner) then %>
    <td><img src="/assets/maillot_jaune_20.png"/></td>
<% end %>
  <% if (stage != nil && stage.ig_stage_result != nil && stage.ig_stage_result.previous_sprinter == race_runner) then %>
      <td><img src="/assets/maillot_vert_20.png"/></td>
<% end %>
  <% if (stage != nil && stage.ig_stage_result != nil && stage.ig_stage_result.previous_climber == race_runner) then %>
    <td><img src="/assets/maillot_pois_20.png"/></td>
<% end %>
  <% if (stage != nil && stage.ig_stage_result != nil && stage.ig_stage_result.previous_young == race_runner) then %>
    <td><img src="/assets/maillot_blanc_20.png"/></td>
<% end %>
  <% if (race_runner.has_other_races) then %>
    <td><%= image_tag("/assets/other_races_color_20.png", :style => "width: 20px;", :title => race_runner.display_other_races) %></td>
  <% end %>
</tr></table>