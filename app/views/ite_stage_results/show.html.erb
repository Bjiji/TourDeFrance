<%require 'chronic_duration'%>

<p id="notice"><%= notice %></p>
<h1><b><%= link_to "Edition " + @ite_stage_result.stage.year, race_path(@ite_stage_result.stage.race) %></b></h1>
<p>
  <b>Stage:</b>
  <%= link_to @ite_stage_result.stage.display_label, stage_path(@ite_stage_result.stage) %>
</p>
<p>
  <b>Dossard:</b>
  <%= if (!@ite_stage_result.race_runner.blank?) then link_to("" + "("  + @ite_stage_result.race_runner.number.to_s + ") " + @ite_stage_result.race_runner.display_fullname, race_runner_path(@ite_stage_result.race_runner)) end %>
</p>
<p>
  <b>Pos:</b>
  <%= @ite_stage_result.pos %>
</p>

<p>
  <b>Time:</b>
  <%= if (@ite_stage_result.time_sec.blank?) then '-' else ChronicDuration.output(@ite_stage_result.time_sec) end %>
</p>

<p>
  <b>Diff time:</b>
  <%= if (@ite_stage_result.diff_time_sec.blank?) then '-' else ChronicDuration.output(@ite_stage_result.diff_time_sec) end %>
</p>
<p>
  <b>Status de course:</b>
  <%= @ite_stage_result.stage_status %>
</p>
<p>
  <b>Ev√©nements:</b>
  <%= @ite_stage_result.stage_tag %>
</p>

<p>
  <b>Dns:</b>
  <%= @ite_stage_result.dns %>
</p>

<p>
  <b>Dnf:</b>
  <%= @ite_stage_result.dnf %>
</p>

<p>
  <b>Dnq:</b>
  <%= @ite_stage_result.dnq %>
</p>

<p>
  <i>confidence:</i>
  <%= @ite_stage_result._confidence %>
</p>

<p>
  <i>auto_name:</i>
  <%= @ite_stage_result.runner_s %>
</p>

