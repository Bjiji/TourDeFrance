<h1>Les résultats individuels d'étapes</h1>
<div id="search">
  <%= render :partial => 'ite_stage_results/search' %>
</div>
<table class="display" id="ite_results">
  <thead>
  <tr>
    <th>Année</th>
    <th title="Numéro d'étape">Et.</th>
    <th>Départ</th>
    <th>Arrivée</th>
    <th>Type</th>
    <th title="Position du coureur à l'arrivée de l'étape">Pos.</th>
    <th title="Temps réalisé par le coureur">Tps</th>
    <th>Coureur</th>
    <th>Equipe</th>
    <th>Nationalité</th>
    <th title="Divers infomations liés à ce résultat">Misc.</th>
  </tr>
  </thead>
  <tbody>
  <% @ite_stage_results.each do |ite_stage_result| %>
      <tr>
        <td><%= link_to ite_stage_result.stage.year, ite_stage_result.stage.race %></td>
        <td><%= link_to ite_stage_result.stage.stage_num, ite_stage_result.stage %></td>
        <td><%= ite_stage_result.stage.start %></td>
        <td><%= ite_stage_result.stage.finish %></td>
        <td><%= ite_stage_result.stage.stage_type %></td>
        <td><%= link_to ite_stage_result.pos, ite_stage_result%></td>
        <td><%= ite_stage_result.display_time %></td>
        <td><%= link_to ite_stage_result.race_runner.display_fullname, ite_stage_result.race_runner %></td>
        <td><%= link_to ite_stage_result.race_runner.team.name, ite_stage_result.race_runner.team %></td>
        <td><%= ite_stage_result.race_runner.nationality %></td>
        <td><%= ite_stage_result.stage_status %><%= if (!ite_stage_result.stage_tag.blank?) then " (" +ite_stage_result.stage_tag + ")" end %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br />

