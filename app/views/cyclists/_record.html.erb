<div class=<%= @runs.size() > 0 ? "accordionOpen" : "accordionClosed" %> >
  <h3><a href="#"><b>Participations: </b>
    (<%= @runs.size() %>)
  </a></h3>
  <div>
    <ul>
      <% @runs.each do |run| %>
          <li><%= if (!run.race.blank?) then
                    link_to run.race.year, race_path(run.race)
                  end %>:   <%= if (!run.number.blank?) then
                                  link_to 'dossard ' + run.number.to_s, race_runner_path(run)
                                end %>, <%= if (!run.team.blank?) then
                                              link_to run.race_team.label, run.team
                                            end %> (<%= run.nationality %>)
          </li>
      <% end %>
    </ul>
  </div>
</div>
