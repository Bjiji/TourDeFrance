<h1>Les tours de France</h1>

<table class="display" id="races">
  <thead>
  <tr>
    <th>Année</th>
    <th>Distance</th>
    <th>Vitesse</th>
    <th>Maillot Jaune (source 1)</th>
    <th>Maillot Jaune (source 2)</th>
    <th>Maillot à pois</th>
    <th>Maillot vert</th>
    <th>Partants</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

<tbody>
<% @races.each do |race| %>
  <tr>
    <td><%= race.year %></td>
    <td><%= race.distance %></td>
    <td><%= race.averageSpeed %></td>
    <td><%= if (race.winner != nil) then link_to race.winner.display_name, cyclist_path(race.winner) end %></td>
    <td><%= if (race.cyclist != nil) then link_to race.cyclist.display_name, cyclist_path(race.cyclist) end  %></td>
    <td><%= if (race.climber != nil) then link_to race.climber.display_name, cyclist_path(race.climber) end  %></td>
    <td><%= if (race.sprinter != nil) then link_to race.sprinter.display_name, cyclist_path(race.sprinter) end  %></td>
    <td><%= if (true) then link_to race.cyclists.count, cyclists_path(:race => race) else 0 end %></td>
    <td><%= link_to 'Voir', race %></td>
    <td><%= link_to 'Editer', edit_race_path(race) %></td>
  </tr>
<% end %>
</tbody>
</table>

