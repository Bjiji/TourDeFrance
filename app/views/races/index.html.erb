 $('#races').dataTable({
     "sPaginationType": "full_numbers",
     "iDisplayLength": 50,
     "aaSorting": [[ 0, "desc" ]],
     "aoColumns" : [
         {"asSorting": [ "desc", "asc" ], "bSortable": true, "bSearchable": true },
         {"bSortable": true, "bSearchable": false },
         {"bSortable": true, "bSearchable": false },
