                <td align=center><img src="/assets/maillot_jaune_40.png"/></td>
                <td>
                  <%= if (@race.ig_race_result != nil && @race.ig_race_result.leader != nil) then
                        link_to @race.ig_race_result.leader.display_fullname, cyclist_path(@race.ig_race_result.leader.cyclist)
                      else
                        "-"
                      end %>
                </td>
                <td align=center><img src="/assets/maillot_blanc_40.png"/></td>
                <td>
                  <%= if (@race.young != nil) then
                        link_to @race.young.display_fullname, cyclist_path(@race.young)
                      else
                        "-"
                      end %>
                </td>
              </tr>
              <tr>
                <td align=center><img src="/assets/maillot_vert_40.png"/></td>
                <td>
                  <%= if (@race.ig_race_result != nil && @race.ig_race_result.sprinter != nil) then
