                      else
                        "-"
                      end %>
                </td>
                <td align=center><img src="/assets/maillot_combat_40.png"/></td>
                <td>
                  <%= if (@race.overall_combat != nil) then
                        link_to @race.overall_combat.display_fullname, cyclist_path(@race.overall_combat)
                      else
                        "-"
                      end %>
                </td>
              </tr>
              <tr>
                <td align=center><img src="/assets/maillot_pois_40.png"/></td>
                <td>
                  <%= if (@race.ig_race_result != nil && @race.ig_race_result.climber != nil) then
                        link_to @race.ig_race_result.climber.display_fullname, cyclist_path(@race.ig_race_result.climber.cyclist)
                      else
                        "-"
                      end %>
                </td>
                <td align=center><h1>T</h1></td>
                <td>
                  <%= if (@race.race_team != nil) then
                        link_to @race.race_team.label, team_path(@race.race_team.team)
